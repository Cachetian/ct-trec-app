<mvc:View controllerName="ct.trec.cttrecapp.controller.MainView" xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true" xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Panel>
                <content>
                    <Input value="{ckt>/new/text}"></Input>
                    <Button text="New Check-in Type" press="onNewCheckInType"></Button>
                </content>
            </Panel>
            <Panel>
                <content>
                    <OverflowToolbar content="{ckt>/types}">
                        <content>
                            <Button text="{ckt>text}" press="onTypedCheckIn"></Button>
                        </content>
                    </OverflowToolbar>
                </content>
            </Panel>
            <Panel>
                <content>
                    <List items="{tci>/items}">
                        <items>
                            <StandardListItem title="{tci>value}" info="{tci>timestamp}"></StandardListItem>
                        </items>
                    </List>
                </content>
            </Panel>
            <Panel>
                <content>
                    <TextArea value="{view>/message}" width="100%" height="12rem">
                    </TextArea>
                </content>
            </Panel>
        </content>
        <footer>
            <OverflowToolbar>
                <content>
                    <ToolbarSpacer></ToolbarSpacer>
                    <Button text="Export" press="onExportAllData"></Button>
                    <Button text="Import" press="onImportAllData"></Button>
                </content>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>